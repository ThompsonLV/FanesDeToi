<div class= "card_index">
  <% @fanes.each do |fane| %>
    <div class="card" style="width: 18rem;">
      <% if fane.photos.attached? %>
        <%= cl_image_tag(fane.photos.key,
            width: 400, height: 300, crop: :fill) %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= fane.title %></h5>
        <p class="card-text"><%= fane.description %></p>
        <%= link_to "go" , fane_path(fane), class:"btn btn-primary"%>
      </div>
    </div>
  <% end %>
</div>
