<div class= "ban">
  <%= image_tag('banniere.jpg', class: 'img-fluid', alt: 'Bannière ventilo') %>
  <div class="slogan-overlay">
    <h2 class= "slogan_1"><strong>Refresh Your Space, Refresh Your Life.</strong></h2>
  </div>
</div>

</div>
<div class= "text-center">
<br>
  <h1>Current offers!</h1>
  <br>
</div>
<div class= "container_index">
  <div class= "card_index">
    <% @fanes.each do |fane| %>
      <%= link_to fane_path(fane) do%>
        <div class="card">
          <% if fane.photos.attached? %>
            <%= cl_image_tag(fane.photos.first.key, height: 200, crop: :fill) %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%=fane.title %></h5>
            <div class= "bulle_g">
              <p class= "bulle">Silent</p>
              <p class= "bulle">Connected</p>
            </div>
              <div class="d-flex justify-content-center">
                <p><%=fane.price_per_day %> €/day </p>
              </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
            <div class= "map"style="width: 100%; height: 600px;"
              data-controller="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
</div>

