<%# BANNIERE %>
<div class= "ban">
  <%= image_tag('banniere.jpg', class: 'img-fluid', alt: 'Bannière ventilo') %>
  <div class="slogan-overlay">
    <h2 class= "slogan_1"><strong>Refresh Your Space, Refresh Your Life.</strong></h2>
  </div>
</div>

<%# OFFRES DU MOMENT %>
<h1 class= "text-center mt-4">CURRENT OFFERS !</h1>
<div class= "container_index">
  <div class= "card_index">
    <% @fanes.each do |fane| %>
      <% if fane.user != current_user %>
        <%= link_to fane_path(fane) do%>
          <div class="card">
            <% if fane.photos.attached? %>
              <%= cl_image_tag(fane.photos.first.key, height: 200, crop: :fill) %>
            <% end %>
            <div class="card-body">
              <h4 class="card-title"><%=fane.title %></h4>
              <div class="d-flex justify-content-center">
                <h5><%=fane.price_per_day %> €/day </h5>
              </div>
              <div class= "bulle_grid">
                <p class= "bulle">Silent</p>
                <p class= "bulle">Connected</p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <%# MAP %>
  <div id="map" style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<h2 class= "titre_team">Who is hiding behind Fanes de toi ?</h2>
<br>

<div id="la_team">
  <div class= "img_center">
    <div class="img_container_1">
        <%= image_tag ("charles.jpg") , class:"bd-placeholder-img" %>
    </div>
    <h2 class="fw-normal">Charles</h2>
    <p><strong>Empathetic:</strong> Possessing the ability to understand and feel the emotions and perspectives of others, fostering good interpersonal relationships and effective communication.</p>
  </div>
  <div class= "img_center">
    <div class="img_container_1">
      <%= image_tag ("lazari.png") , class:"bd-placeholder-img"%>
    </div>
    <h2 class="fw-normal">El Azahri</h2>
    <p><strong>Creative:</strong> Able to think in an original way, generate new ideas, and offer innovative solutions to problems.</p>
  </div>
  <div class= "img_center">
    <div class="img_container_1">
      <%= image_tag ("thomas.jpg") , class:"bd-placeholder-img"%>
    </div>
    <h2 class="fw-normal">Thomas</h2>
    <p><strong>Persistent:</strong> Capable of persevering through obstacles and challenges, determined to achieve goals without being easily discouraged.</p>
  </div>
</div>
