  <h2 class= "title_show"><%= @fane.title %></h2>

<div class= "img_container">
  <% @fane.photos.each do |photo|%>
    <%= cl_image_tag(photo.key, crop: :fill, class: "img_client") %>
  <div class= "container_show">
    <div class= "brand">
      <p class= "police">Brand</p>
        <h2 class= "marque"><%= @fane.brand %></h2>
    </div>
    <div class= "start_date">
      <p class= "police">Start date</p>
        <h2 class= "start"><%= @fane.start_date %></h2>
    </div>
    <div class= "end_date">
      <p class= "police">End date</p>
        <h2 class= "end"><%= @fane.end_date %></h2>
    </div>
    <div class="script_btn">
      <% if @fane.user != current_user %>
        <p class="book-script">Choose you're dates</p>
      <% end %>
      <% unless @fane.user == current_user || !user_signed_in?%>
      <%= render "bookings/form", fane: @fane, booking: @booking %>
    <% end %>
      <% if @fane.user == current_user %>
        <%= link_to edit_fane_path(@fane.id) do %>
        <i class="fa-regular fa-pen-to-square fa-beat style=--fa-animation-duration: 0.6s; fa-3x"></i>
        <% end %>

      <%end %>
    <% if @fane.user == current_user %>
      <%= link_to fane_path(@fane), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <i class="fa-regular fa-trash-can fa-beat style=--fa-animation-duration: 0.6s; fa-3x"></i>
      <% end %>
    <% end %>
    </div>

  </div>
</div>
  <%end%>

<div class= "content_show">


  <h2 class= "vent">About the fan.</h2>
  <div >
    <p class= "description"><%= @fane.description %></p>
  </div>

</div>
