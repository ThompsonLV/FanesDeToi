<div class="container">
  <h1><strong>Bookings</strong></h1>

  <div class="card_index">
    <% @bookings.each do |booking| %>
      <div class="card">
        <% if booking.fane.photos.attached? %>
          <%= cl_image_tag(booking.fane.photos.first.key, height: 200, crop: :fill) %>
        <% end %>
        <div class="card-body">
          <h2 class="card-title"><%= booking.fane.title %></h2>
          <p>Booking : <%= booking.fane.start_date%> to <%= booking.fane.end_date%> (<%= (booking.fane.end_date - booking.fane.start_date).to_i %> days)</p>
          <p>Total booking price : <%= (booking.fane.price_per_day * (booking.fane.end_date - booking.fane.start_date).to_i) %> â‚¬</p>
        </div>
        <div class="d-flex justify-content-center">
          <%= link_to booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%>
          <i class="fa-regular fa-trash-can fa-2x" style="color: red"></i>
          <% end %>
          <%= link_to edit_fane_booking_path(booking.fane, booking) do %>
          <i class="fa-regular fa-pen-to-square fa-2x" ></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
